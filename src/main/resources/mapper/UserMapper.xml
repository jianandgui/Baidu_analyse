<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.swpu.cins.event.analyse.platform.dao.UserDao">

    <select id="queryByName" resultType="cn.edu.swpu.cins.event.analyse.platform.model.persistence.User" parameterType="String">
        SELECT * FROM
        user_information
        WHERE
        username=#{username}

    </select>


    <update id="updatePwd" parameterType="String">
        UPDATE
        user_information
        SET
        password=#{password}
        WHERE
        username=#{username}

    </update>

    <insert id="addUser" parameterType="cn.edu.swpu.cins.event.analyse.platform.model.persistence.User">
        INSERT
        user_information
        (username,password,role)
        VALUES (#{username},#{password},#{role})

    </insert>

    <select id="queryAll" resultType="cn.edu.swpu.cins.event.analyse.platform.model.view.Role">
        SELECT username,role from user_information WHERE role = 'ROLE_VIP' OR role= 'ROLE_NORMAL'
    </select>

    <update id="updateRole" parameterType="cn.edu.swpu.cins.event.analyse.platform.model.view.Role">

      UPDATE user_information
      SET role=#{role}
      WHERE username=#{username}
    </update>
</mapper>